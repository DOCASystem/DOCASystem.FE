# File môi trường production cho quá trình build
# Giá trị thực tế nên được thiết lập trong dashboard Vercel

# URL API của backend
NEXT_PUBLIC_API_URL=https://production.doca.love

# Mật khẩu mã hóa JWT (đây chỉ là placeholder)
JWT_SECRET=replace_with_actual_secret_in_vercel_dashboard

# Thiết lập cho quá trình build
NODE_ENV=production
NEXT_PHASE=phase-production-build

# Thiết lập để tránh lỗi trong quá trình build
NEXT_TELEMETRY_DISABLED=1
NEXT_DISABLE_MIDDLEWARE=1

# Tắt các tính năng gây lỗi khi build
NEXT_PUBLIC_SKIP_AUTH_CHECK=true
NEXT_PUBLIC_SKIP_ADMIN_PAGES=false 